<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="css/userStylesheet.css" type="text/css">
    <link rel="stylesheet" href="css/glide.core.min.css">
    <link rel="stylesheet" href="css/glide.theme.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap" rel="stylesheet">
    <title><%= title %></title>  
</head> 
<body>
    <div class="container-fluid">
    <%- include('includes/user-nav.ejs') %>
        <div class="row content">
            <div class="col">
                <div class="grid-container">
                    <% books.forEach((book) => {%>
                        <a href="/view?data=<%= book.isbn %>">
                            <div class="card">
                                <img class="card-img-top" src="https://<%= book.isbn %>.s3.amazonaws.com/<%= book.isbn %>-1.jpg" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title"><%= book.title %></h5>
                                </div>
                            </div>
                        </a>
                    <%})%>
                </div>           
            </div>
        </div>
    </div>
    <%- include('includes/foot.ejs') %>