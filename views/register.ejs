<%- include('includes/head.ejs') %>

    <link rel="stylesheet" href="/css/registerStyle.css" type="text/css">
    <title><%= title %></title>
</head>
<body>
    <% if(message[0]){ %>
        <div class="warning-message-banner">
            <p><%= message %></p>
        </div>
    <%}%>
    <div class="background">
        <img src="/resources/logo.png" alt="BC Library" class="signin-logo">
        <form action="/register" method="POST" class="register-form" id="register-form">
            <div>
                <label for="firstName">First Name</label>
                <input type="text" name="firstName" id="firstName" class="input-field" required>
            </div>
            <br>
            <div>
                <label for="lastName">Last Name</label>
                <input type="text" name="lastName" id="lastName" class="input-field" required>
            </div>
            <br>
            <div>
                <label for="email">Email</label><br>
                <input type="email" name="email" id="email" class="input-field" required>
            </div>
            <br>
            <div>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="input-field" required>
            </div>
            <br>
            <div>
                <label for="password-confirm">Comfirm Password</label>
                <input type="password" name="passwordConfirm" id="password-confirm" class="input-field" required>
            </div>
            <br>
            <br>
            <input type="submit" name="Login" value="Register" class="submit">
        </form>
        <br>
        <br>
        <p class="opposing-action-text">Already have an account?</p>
        <a href="/login" class="opposing-action-link">Login</a>
    </div>

<%- include('includes/foot.ejs') %>