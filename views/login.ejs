<%- include('includes/head.ejs') %>

    <link rel="stylesheet" href="/css/loginStyle.css" type="text/css">
    <title><%= title %></title>
</head>
<body>
    <% if(message[0]){ %>
        <div class="warning-message-banner">
            <p><%= message %></p>
        </div>
    <%}%>
    <div class="background">
        <img src="/resources/logo.png" alt="BC Library" class="signin-logo">
        <form action="/login" method="POST" class="register-form">
            <div class="row">
                <span class="col-2">
                    <img src="/resources/user.png" alt="User Image" class="signin-field-image">
                </span>
                <span class="col-10">
                    <input type="email" name="username" id="username" class="input-field">
                </span>
            </div>
            <br>
            <div class="row">
                <span class="col-2">
                    <img src="/resources/password.png" alt="Key Image" class="signin-field-image">
                </span>
                <span class="col-10">
                    <input type="password" name="password" id="password" class="input-field">
                </span>
            </div>
            <br>
            <br>
            <input type="submit" name="Login" value="Login" class="submit">
        </form>
        <br>
        <br>
        <p class="opposing-action-text">Don't have an account?</p>
        <a href="/register" class="opposing-action-link">Signup</a>
    </div>

<%- include('includes/foot.ejs') %>